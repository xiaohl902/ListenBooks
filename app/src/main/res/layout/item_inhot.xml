<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"

              android:layout_width="match_parent"
              android:layout_height="match_parent">
<!--嵌套在里面的GridView 热门相声的item -->
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/big_pic"
            android:background="@mipmap/ic_launcher"
            android:layout_width="106dp"
            android:scaleType="fitXY"
            android:layout_height="100dp"/>
        <LinearLayout
            android:background="#696565"
            android:alpha="0.2"
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/big_pic"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="18dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/big_pic"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="8dp"
                android:src="@drawable/hot_handset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/color_white"
                android:id="@+id/playNumber"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/color_white"

                android:id="@+id/wan"
                android:text="万"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/albumName"
        android:textColor="@color/color_blacktext"
        android:text="【高清】"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/artistName"
        android:text="马力三"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>