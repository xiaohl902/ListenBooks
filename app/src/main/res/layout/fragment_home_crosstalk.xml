<?xml version="1.0" encoding="utf-8"?>
<!--相声-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#e9e5e5"
              android:orientation="vertical">
    <com.qf.kenlibrary.widget.PullRefreshScrollView.PullDownScrollView
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.youth.banner.Banner
            app:indicator_drawable_selected="@drawable/page_indicator_focused"
            app:indicator_drawable_unselected="@drawable/page_indicator_unfocused"
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="160dp"/>
        <include layout="@layout/layout_line"/>
       <com.mwkj.widget.MyListView
           android:id="@+id/mlv"
           android:background="#fff"
           android:layout_width="match_parent"
           android:dividerHeight="18dp"
           android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>
    </com.qf.kenlibrary.widget.PullRefreshScrollView.PullDownScrollView>
</LinearLayout>