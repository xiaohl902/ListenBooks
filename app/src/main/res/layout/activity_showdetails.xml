<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:showDividers="end"
              android:divider="@color/color_gray"
              android:dividerPadding="2dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/back"
            android:padding="10dp"
            android:src="@drawable/back_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/title"
            android:text="演出详情"
            android:textSize="26sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/playAnimation"
            android:layout_alignParentRight="true"
            android:src="@drawable/animation1"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <TextView
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        android:textColor="@color/color_black"
        android:id="@+id/showName"
        android:text="内容"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/iv"
            android:scaleType="fitXY"
            android:layout_width="100dp"
            android:background="@drawable/ic_launcher"
            android:layout_height="130dp"/>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:padding="4dp"
                android:text="2016.03.19-2017.01.14"
                android:drawableLeft="@drawable/time"
                android:drawablePadding="4dp"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="4dp"
                android:text="徐汇影剧场 - 上海"
                android:drawableLeft="@drawable/address"
                android:drawablePadding="4dp"
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:padding="4dp"
                android:text="50-80元"
                android:drawablePadding="4dp"
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/buyTicket"
                android:layout_marginTop="6dp"
                android:padding="4dp"
                android:text="去买票"
                android:textColor="@color/color_white"
                android:gravity="center_horizontal"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:background="@drawable/buyticket"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:textColor="@color/color_greentext"
        android:padding="8dp"
        android:text="演出地址："
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="10dp"
        android:textSize="18sp"
        android:id="@+id/showAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="8dp"
        android:textColor="@color/color_greentext"
        android:text="演出详情："
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="10dp"
        android:textSize="16sp"
        android:id="@+id/showDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>