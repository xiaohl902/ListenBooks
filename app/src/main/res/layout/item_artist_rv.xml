<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="2dp"
    app:cardBackgroundColor="#eceab1"
    app:cardUseCompatPadding="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/art_iv"
            android:src="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="160dp"
            />
        <TextView
            android:padding="10dp"
            android:id="@+id/art_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="张老师"
            android:textSize="18sp"
            />
        <TextView

            android:id="@+id/art_works_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《荷塘月色》"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#e5f3ec"
            >
            <TextView
                android:id="@+id/worknum"
                android:drawableLeft="@drawable/cassette"
                android:drawablePadding="5dp"
                android:layout_marginLeft="6dp"
                android:text="0"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/playnum"
                android:drawableLeft="@drawable/handset_hui"
                android:drawablePadding="5dp"
                android:layout_alignParentRight="true"
                android:text="0"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
          <!--  <TextView
                android:id="@+id/playnum_unit"
                android:layout_marginRight="6dp"
                android:layout_toRightOf="@+id/playnum"
                android:text="万"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->

        </RelativeLayout>
    </LinearLayout>




</android.support.v7.widget.CardView>